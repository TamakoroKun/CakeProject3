<h1>商品新規登録</h1>
<%= form_with model: @item, url:  admin_items_path, local: true do |f| %>
  <%= f.attachment_field :image %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
  <h4>ジャンル</h4>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
  <h4>税抜価格<%= f.text_field :price %>円</h4>
  <h4>販売ステータス</h4>
  <%= f.select :is_active, [["販売中", "販売中"], ["販売中止", "販売中止"]], include_blank: "選択して下さい" %>
  <%= f.submit '新規登録' %>
<% end %>