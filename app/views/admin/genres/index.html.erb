<h2>ジャンル追加・一覧</h2>

<%= form_for(@genre, url: admin_genres_path) do |f| %>
<div>
 <%= f.text_field :name %>
</div>

<div class="form-check">
  <%= f.radio_button :is_active, :true %>
  <%= f.label :is_active, "有効" %>
  <%= f.radio_button :is_active, :false %>
  <%= f.label :is_active, "無効" %>
</div>

<div>
<%= f.submit "追加" %>
</div>
<% end %>