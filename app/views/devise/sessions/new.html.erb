<% if current_page?(new_customer_session_path) %>

  <h3>会員の方はこちらからログイン</h3>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  
    <div class="field">
      <%= f.label :パスワード %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  
    <%= link_to "=> パスワードを忘れた方はこちら", new_password_path(resource_name) %><br />
  
    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>
  
  <h3>登録がお済みでない方</h3>
  <%= link_to "こちら", new_customer_registration_path %> <p>から新規登録を行ってください。</p>
<% else %>
  <h2>管理者ログイン</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  
    <div class="field">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  
    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>

<% end %>