<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %>
    （姓）<%= f.text_field :last_name, autofocus: true %>
    （名）<%= f.text_field :first_name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :フリガナ %>
    （セイ）<%= f.text_field :last_name_kana, autofocus: true %>
    （メイ）<%= f.text_field :first_name_kana, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">　<%# 変な文字列入っているが、hasmanyの設定後消えるっぽい？もし消えなければカラムの指定をaddress→customer.addressにすればいける？？？ %>
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postcode, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.text_field :phone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h3>既に登録済みの方</h3>
<%= link_to "こちら", new_customer_session_path %> <p>からログインしてください。</p>
<%= render "devise/shared/links" %>
