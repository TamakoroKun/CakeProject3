<h2>登録情報編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

 <div class="field">
    <%= f.label :名前 %>
    （姓）<%= f.text_field :last_name, autofocus: true %>
    （名）<%= f.text_field :first_name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :フリガナ %>
    （セイ）<%= f.text_field :last_name_kana, autofocus: true %>
    （メイ）<%= f.text_field :first_name_kana, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field"><%# 変な文字列入っているが、hasmanyの設定後消えるっぽい？もし消えなければカラムの指定をaddress→customer.addressにすればいける？？？ %>
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postcode, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.text_field :phone_number, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存する" %>
  </div>
<% end %>

<%= link_to "退会する", customers_withdraw_path(current_customer), method: :patch %>


<%= link_to "Back", :back %>
