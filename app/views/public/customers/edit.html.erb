<h1>会員情報編集</h1>
<% if @customer.errors.any? %>
  <div id="error_explanation">
  <h2><%= @customer.errors.count %>error</h2>

    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
<% end %>

<%= form_with model:@customer, local:true, url: customers_path do |f| %>
  <p>名前</p>
  <p>性</p><%= f.text_field :last_name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
  <p>名</p><%= f.text_field :first_name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
  <p>フリガナ</p>
  <p>セイ</p><%= f.text_field :last_name_kana, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
  <p>メイ</p><%= f.text_field :first_name_kana, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
  <p>メールアドレス</p><%= f.text_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
  <p>郵便番号（ハイフンなし）</p><%= f.text_field :postcode, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
  <p>住所</p>  <%= f.text_field :address, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
  <p>電話番号（ハイフンなし）</p>
  <%= f.text_field :phone_number, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
  <%= f.submit "編集内容を保存する" %>
<% end %>

<%= link_to "退会する", customers_unsubscribe_path(current_customer.id) %>