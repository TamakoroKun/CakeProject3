
<div class="container my-5">
 <div class="row">
    <div class="col-3">
<div class="offset-1 col-10">
	<div class="row d-flex aline-items-center">
		<strong class="red-border px-3 pb-1">ジャンル検索</strong>
	</div>

	    <div class="row mx-auto mt-3">
		<span class="brown-border text-center"><%= link_to "すべての商品", public_items_path %></span>
		</div>
	    <% @genres.each do |genre| %>
		<%= link_to public_items_path(genre) do %>
			<div class="row mx-auto mt-3">
			<span class="brown-border text-center"><%= genre.name %></span>
			</div>
		<% end %>
	  <% end %>
</div>
 </div>

 <div class="col-9 my-3">
	<div class="row">




<div class="col-5">
 <%= attachment_image_tag @item, :image, size: '50x50', format: "jpeg", fallback: 'noimage.jpg', size: '250x250', class: "rounded" %>
</div>

<div class="col-5">
<div class="row">
  <h4 class="red-border px-3 pb-1"><%= @item.name %></h4>


<div class="row mt-3">
 <p class="ml-5"><%= @item.introduction %></p>
</div>

 <div class="row">
 <strong class="red-border px-3 ml-auto"><%= (@item.price * 1.1).floor %>円 (税込)</strong>
</div>

</div>
 <div class="row">
  <div class="offset-6">

    <div class="row">
      <%= form_for (@cart_items) do |f| %>
        <%= f.number_field :quentity, min:1, placeholder: "個数選択" %><span>個</span>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.submit "カートに入れる", class: "btn btn-outline-danger" %>
  　　<% end %>
    </div>

  </div>
</div>
</div>


  </div>
</div>



